    <div class="content">
	<div class="page-title">
		<ul class="breadcrumb">
			<li>
				<a href="/admin"><i class="fa fa-home"></i></a>
			</li>
			<li>
				<a href="/admin/clients" class="active">Clienti</a>
			</li>
		</ul>
	</div>
      <div class="row-fluid">
        <div class="span12">
          <div class="grid simple">
			<div class="grid-title no-border">
				<%- toolsService.getFlashMessage(req.flash()) %>
				<a href="/admin/clients/add" class="btn btn-info"><i class="fa fa-plus-circle"></i>&nbsp;Adauga client</a>
			</div>
			<div class="grid-body no-border">
				<table class="table table-hover table-condensed admin-table" id="example-table">
					<thead>
						<tr>
							<th style="width:10%">Cod</th>
							<th style="width:22%">Nume</th>
							<th style="width:10%">Status</th>
							<th style="width:15%">Cod fiscal</th>
							<th style="width:15%">Numar inregistrare</th>
							<th style="width:5%">&nbsp;</th>
							<th style="width:5%">&nbsp;</th>
						</tr>
					</thead>
					<tbody>
						<% if(items.length>0) { _.each(items,function(item) { %>
						<tr>
							<td class="v-align-middle"><%= item.Code %></td>
							<td class="v-align-middle bold"><%= item.ClientName %></td>
							<td class="v-align-middle"><span class="muted"><%- item.Status=='active' ? 'Activ' : item.Status=='inactive' ? 'Inactiv' : item.Status=='suspended' ? 'Suspended' : '' %></span></td>
							<td class="v-align-middle"><span class="muted"><%= item.FiscalCode %></span></td>
							<td class="v-align-middle"><span class="muted"><%= item.RegisterCode %></span></td>
							<td><a href="/admin/clients/edit/<%= item.ID %>" class="action-icon btn btn-small btn-success" title="Modifica"><i class="fa fa-edit"></i></a></td>
							<td><a href="/admin/clients/delete/<%- item.ID %>" title="Sterge" class="action-icon delete-confirm btn btn-small btn-danger"><i class="fa fa-trash-o"></i></a></td>
						</tr>
						<% }); } %>
					</tbody>
				</table>
			</div>
          </div>
        </div>
      </div>
    </div>
