    <div class="content">
	<div class="page-title">
		<ul class="breadcrumb">
			<li>
				<a href="/admin"><i class="fa fa-home"></i></a>
			</li>
			<li>
				<a href="/admin/documents" class="active">Documente</a>
			</li>
		</ul>
	</div>
      <div class="row-fluid">
        <div class="span12">
          <div class="grid simple">
			<div class="grid-title no-border">
				<%- toolsService.getFlashMessage(req.flash()) %>
				<a href="/admin/documents/add" class="btn btn-info"><i class="fa fa-plus-circle"></i>&nbsp;Adauga document</a>
			</div>
			<div class="grid-body no-border">
				<table class="table table-hover table-condensed admin-table" id="example-table">
					<thead>
						<tr>
							<th style="width:20%">Nume document</th>
							<th style="width:20%">Tip Document</th>														
							<th style="width:20%">Activ</th>
							<th style="width:5%">Fisier</th>														
							<th style="width:5%">Public</th>
							<th style="width:20%">Data Creare</th>
							<th style="width:20%">Creat de</th>
							<th style="width:5%">&nbsp;</th>
							<th style="width:5%">&nbsp;</th>
						</tr>
					</thead>
					<tbody>
						<% if(items.length>0) { _.each(items,function(item) { %>
						<tr>
							<td class="v-align-middle"><%- item.Name %></td>
							<td class="v-align-middle"><span class="muted"><%= req.session.getTranslation(item.DocumentType) %></span></td>
							<td class="v-align-middle bold"><%- req.session.getTranslation(item.AssetName) %></td>
							<td class="v-align-middle"><span class="muted"><a href='<%= item.DocumentURL %>'><i class="fa fa-download"></i></a></span></td>
							<td class="v-align-middle"><span class="muted"><%= (item.isPublic)?"Da":"Nu" %></span></td>
							<td class="v-align-middle"><span class="muted"><%= timeService.formatDate(item.DateCreated,'HH:mm:ss DD-MM-YYYY') %></span></td>
							<td class="v-align-middle"><span class="muted"><%= item.User %></span></td>
							<td><a href="/admin/documents/edit/<%= item.ID %>" class="action-icon btn btn-small btn-success" title="Modifica"><i class="fa fa-edit"></i></a></td>
							<td><a href="/admin/documents/delete/<%- item.ID %>" title="Sterge" class="action-icon delete-confirm btn btn-small btn-danger"><i class="fa fa-trash-o"></i></a></td>
						</tr>
						<% }); } %>
					</tbody>
				</table>
			</div>
          </div>
        </div>
      </div>
    </div>
